{# Template général de la page #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}Mon titre{% endblock %}

{# Ici vous mettez vos codes HTML et balises Twig au besoin #}
{% block body %}

        <!-- Section posts -->
        <div class="w-1/3 m-auto mb-5">
                {% for article in article %}
                <div class="rounded overflow-hidden border w-full bg-white mx-3 md:mx-0 lg:mx-0">
                    <img class="max-h-screen bg-cover" src="{{ asset('imgs/bruschetta.jpg')}}">
                    <div class="px-3 pb-2">
                        <div class="pt-2">
                            <span class="text-sm text-gray-400 font-medium fa fa-user"> {{article.author.username}} •</span>
                            <span class="text-sm text-gray-400 font-medium"> {{article.date|date('d/m/Y')}} •</span>
                            <span class="text-sm text-gray-400 font-medium"> {{article.type}}</span>
                        </div>
                        <div class="pt-1">
                            <div class="mb-2 text-sm">
                                <h1 class="font-medium mr-2">{{article.title}}</h1>
                                <p style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis;max-width: 80ch;">{{article.text}}</p>

                                <a href={{ path('app_recettes_details') }}>
                                    <button class="w-full bg-button-green mt-2 py-2 text-white">Voir plus...</button>
                                </a>

                                <hr class="my-2">

                            </div>
                        </div>
                        <div class="text-xs mb-2 cursor-pointer font-medium fas fa-comment-alt fa fa-envelope"> {{article.comments|length}} commentaires</div>
                    </div>
                </div>
                {% endfor %}
        </div>
    </div>

{% endblock %}